  <body>
<div id="products">
    <br>
    <h3>PRODUCTS</h3>
    <br>
    <div class="container table-responsive">
    <div style="margin-right: 20px;" >
        <form method="GET" action="/api/adminControl/add" id="addProductForm">
            <button class="submi btn btn-success btn-lg float-right" type="submit" name="submit" value="Add Product"><i class="fas fa-plus"></i></button>
        </form>
    </div>
    <table class="table">
        <thead>
        <tr>
            <th scope="col">Image</th>
            <th  scope="col">Category</th>
            <th  scope="col">Product Name</th>
            <th  scope="col">Release Year</th>
            <th  scope="col">Official Link</th>
            <th  scope="col">Rating</th>
            <th  scope="col">Description</th>
            <th  scope="col">Update</th>
            <th  scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        <% products.forEach((product) => { %>
        <div scope="row">
            <tr>
                <td><img src="/images/<%= product.img %>" width="50px" height="50px" alt=""></td>
                <td><%= product.category_name %> </td>
                <td><%= product.name%></td>
                <td><%= product.release_year%></td>
                <td><%= product.official_link%></td>
                <td><%= product.rating%></td>
                <td><%= product.description%></td>
                <td>
                    <button type="button" class="btn btn-success" onclick="location.href = '/api/adminControl/update/<%=product.pid%>';">
                        Update
                    </button>                
                </td>
                <td>
                    <button type="button" class="btn btn-success" onclick="location.href = '/api/adminControl/update/<%=product.pid%>';">
                        Delete
                    </button>
                </td>
            </tr>
        </div>
        <% });%>
    </tbody>    
    </table>
    </div>
</div>
