<link rel="stylesheet" href="/css/profile.css">
<link href="https://fonts.googleapis.com/css2?family=Balsamiq+Sans&display=swap" rel="stylesheet">
<title>Agro-Point</title>

<div id="nav">
    <img src="/images/logo.png" id="logo">
    <a id="profile" href="">Hi <%=customer.first_name%> ! </a>
    <a href="/users/logout">Logout</a>
</div>

<div id="name">
    <Br><br><br><Br><br><br><Br><br><br>
    <p><%= customer.first_name %> <%= customer.last_name %></p>
</div>
<div id="bookings">
    <h3>Bookings </h3>
    <br>
    <table>
        <tr>
            <th>Resort Name</th>
            <th>Booking Date</th>
            <th>End Date</th>
            <th>Room Type</th>
            <th>Number of Rooms Booked</th>
            <th>Price Paid</th>
            <th>Update </th>
            <th>Delete </th>
        </tr>
        <% bookings.forEach((item) => { %>
        <div class="row">
            <tr>
                <td><%= item.hotel_name %> </td>
                <td><%= item.start_time%></td>
                <td><%= item.end_time%></td>
                <td><%= item.category_name%></td>
                <td><%= item.quantity%></td>
                <td><%= item.price%></td>
                <td><button onclick="location.href = '/users/hotelUpdate/<%= item.hotel_id %>/<%=customer.customer_id%>';">
                    Update</button></td>
                <td><button onclick="location.href = '/users/hotelDelete/<%= item.hotel_id %>/<%=customer.customer_id%>';">
                    Delete</button></td>
            </tr>
        </div>
        <% });%>
    </table>
</div>