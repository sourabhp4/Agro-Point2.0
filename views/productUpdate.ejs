<meta charset="utf-8">
<meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
<title>Agro-Point</title>
<section class="container"></section>

<div class="productUpdate">
  <img src= /images/logo.png> <h1>Update/Delete Product</h1>
  <form method="post" action="/api/adminControl/update/<%= o_uid %>/<%= pid %>">
    <% error.forEach((item) => { %>
      <h5 style="color: red"><%= item %></h5>
      <% });%>
    <p><input type="text" name="name" placeholder="Name" value="<%= product.name %>" required></p>
    <p><input type="number" name="release_year" placeholder="Release Year" value="<%= product.release_year %>" required></p>
    <p><input type="text" name="official_link" placeholder="Official Link" value="<%= product.official_link %>" required></p>
    <p><input type="text" name="description" placeholder="Description" value="<%= product.description %>" required></p>
    <p><select name="category_id" id="cid">
        <option value=1>Fertilizers</option>
        <option value=2>Pesticides</option>
        <option value=3>Tools</option>
        <option value=4>Seeds</option>
        <option value=6>Vehicles</option>
        <option value=5>Other</option>
      </select>
    </p>
    <p class="submit"><input type="submit" name="submit" value="Update" required></p>
  </form>
</div>

<div class="productDelete">
  <form method="post" action="/api/adminControl/delete/<%= o_uid %>/<%= pid %>">
    <p class="submit"><input type="submit" name="submit" value="Delete" required></p>
  </form>
</div>

<div class="Cancel">
  <button onClick="location.href = '/api/adminControl/<%= o_uid %>'">Cancel</button>
</div>